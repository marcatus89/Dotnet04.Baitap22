@page "/album3"
<PageTitle>KBHOME 3</PageTitle>
<h1>ALBUM 3 KBHOME TEAM BUIDING 2025</h1>
<div>
    <div class="row">
        <div class="col-6">
            <img src="Retouch 1/Album3/@imgKB" style="width:100%" class="image-fluid" alt="..." />
        </div>
        <div class="col-6">
            <button class="btn btn-danger m-2" @onclick="() => ChangeHinh9()">IMAGE9</button>
            <button class="btn btn-secondary m-2" @onclick="() => ChangeHinh10()">IMAGE10</button>
            <button class="btn btn-dark m-2" @onclick="() => ChangeHinh11()">IMAGE11</button>
            <button class="btn btn-primary m-2" @onclick="() => ChangeHinh12()">IMAGE12</button>
            <br>
            @foreach (var item in dsHinh)
            {
                <button class="btn @getButtonClass(item) m-2" @onclick="() => ChangeHinh(item)">@item</button>
            }
            <br>
            @foreach (var item in dsHinhDics)
            {
                <button class="btn @item.Value m-2">@item.Key</button>
            }
        </div>
    </div>
</div>
@code {
    private string imgKB = "IMAGE9-KBHOME.jpg";
    private void ChangeHinh9()
    {
        imgKB = "IMAGE9-KBHOME.jpg";
    }
    private void ChangeHinh10()
    {
        imgKB = "IMAGE10-KBHOME.jpg";
    }
    private void ChangeHinh11()
    {
        imgKB = "IMAGE11-KBHOME.jpg";
    }
    private void ChangeHinh12()
    {
        imgKB = "IMAGE12-KBHOME.jpg";
    }

    private List<string> dsHinh = new List<string>() { "IMAGE9", "IMAGE10", "IMAGE11", "IMAGE12" };
    private void ChangeHinh(string number)
    {
        imgKB = $"{number}" + "-KBHOME.jpg";
    }
    private string getButtonClass(string color)
    {
        return color switch
        {
            "IMAGE9" => "btn-danger",
            "IMAGE10" => "btn-secondary",
            "IMAGE11" => "btn-dark",
            "IMAGE12" => "btn-primary"
        };
    }
    private Dictionary<string, string> dsHinhDics = new Dictionary<string, string>()
{
{"IMAGE9","btn-danger"},
{"IMAGE10","btn-secondary"},
{"IMAGE11","btn-dark"},
{"IMAGE12","btn-primary"},
};
    private void ChangeHinhDics(string number)
    {
        imgKB = $"{number}" + "-KBHOME.jpg";
    }
}