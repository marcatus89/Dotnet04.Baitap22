@page "/album2"
<PageTitle>KBHOME 2</PageTitle>
<h1>ALBUM 2 KBHOME TEAM BUIDING 2025</h1>
<div>
    <div class="row">
        <div class="col-6">
            <img src="Retouch 1/Album2/@imgKB" style="width:100%" alt="..." class="image-fluid" />
        </div>
        <div class="col-6">
            <button class="btn btn-danger m-2" @onclick="() => ChangeHinh5()">IMAGE5</button>
            <button class="btn btn-secondary m-2" @onclick="() => ChangeHinh6()">IMAGE6</button>
            <button class="btn btn-dark m-2" @onclick="() => ChangeHinh7()">IMAGE7</button>
            <button class="btn btn-primary m-2" @onclick="() => ChangeHinh8()">IMAGE8</button>
            <br>
            @foreach (var item in dsHinh)
            {
                <button class="btn @getButtonClass(item) m-2" @onclick="() => ChangeHinh(item)">@item</button>
            }
            <br>
            @foreach (var item in dsHinhDics)
            {
                <button class="btn @item.Value m-2" @onclick="()=>ChangeHinhDics(item.Key)">@item.Key</button>
            }
        </div>
    </div>
</div>

@code
{
    private string imgKB = "IMAGE5-KBHOME.jpg";
    private void ChangeHinh5()
    {
        imgKB = "IMAGE5-KBHOME.jpg";
    }
    private void ChangeHinh6()
    {
        imgKB = "IMAGE6-KBHOME.jpg";
    }
    private void ChangeHinh7()
    {
        imgKB = "IMAGE7-KBHOME.jpg";
    }
    private void ChangeHinh8()
    {
        imgKB = "IMAGE8-KBHOME.jpg";
    }
    private List<string> dsHinh = new List<string>() { "IMAGE5", "IMAGE6", "IMAGE7", "IMAGE8" };
    private void ChangeHinh(string number)
    {
        imgKB = $"{number}" + "-KBHOME.jpg";
    }
    private string getButtonClass(string color)
    {
        return color switch
        {
            "IMAGE5" => "btn-danger",
            "IMAGE6" => "btn-secondary",
            "IMAGE7" => "btn-dark",
            "IMAGE8" => "btn-primary",
            _ => "btn-light"
        };
    }
    private Dictionary<string, string> dsHinhDics = new Dictionary<string, string>()
    {
        {"IMAGE5","btn-danger"},
        {"IMAGE6","btn-secondary"},
        {"IMAGE7","btn-dark"},
        {"IMAGE8","btn-primary"}
    };
    private void ChangeHinhDics(string number)
    {
        imgKB=$"{(number)}"+"-KBHOME.jpg";
    }
}