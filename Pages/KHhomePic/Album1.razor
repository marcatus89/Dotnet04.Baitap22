@page "/album1"
<PageTitle>KBHOME 1</PageTitle>
<h1>ALBUM 1 KBHOME TEAM BUILDING 2025</h1>
<div>
    <div class="row">
        <div class="col-6">
            <img src="Retouch 1/Album1/@imgKB" style="width:100%" alt="..." class="img-fluid" />
        </div>
        @* Dùng cách thường *@
        <div class="col-6">
            <button class="btn btn-danger m-2" @onclick="() => ChangeHinh1()">IMAGE1</button>
            <button class="btn btn-secondary m-2" @onclick="() => ChangeHinh2()">IMAGE2</button>
            <button class="btn btn-dark m-2" @onclick="() => ChangeHinh3()">IMAGE3</button>
            <button class="btn btn-primary m-2" @onclick="() => ChangeHinh4()">IMAGE4</button>
            <br>
            @foreach (var item in dsColor)
            {
                <button class="btn @GetButtonClass(item) m-2" @onclick="() => ChangeHinh(item)">@item</button>
            }
            <br>
            @foreach(var item in dsColorDics)
            {
                <button class="btn @item.Value m-2" @onclick="()=>ChangeHinhDics(item.Key)">@item.Key</button>
            }
        </div>
    </div>
</div>
@code {
    private string imgKB = "IMAGE1-KBHOME.jpg";
    private void ChangeHinh1()
    {
        imgKB = "IMAGE1-KBHOME.jpg";
    }
    private void ChangeHinh2()
    {
        imgKB = "IMAGE2-KBHOME.jpg";
    }
    private void ChangeHinh3()
    {
        imgKB = "IMAGE3-KBHOME.jpg";
    }
    private void ChangeHinh4()
    {
        imgKB = "IMAGE4-KBHOME.jpg";
    }
    private List<string> dsColor = new List<string>() { "IMAGE1", "IMAGE2", "IMAGE3", "IMAGE4" };
    private void ChangeHinh(string number)
    {
        imgKB = $"{number}" + "-KBHOME.jpg";
    }
    private string GetButtonClass(string color)
    {
        return color switch
        {
            "IMAGE1" => "btn-danger",
            "IMAGE2" => "btn-secondary",
            "IMAGE3" => "btn-dark",
            "IMAGE4" => "btn-primary",
            _ => "btn-light"
        };
    }
    private Dictionary<string, string> dsColorDics = new Dictionary<string, string>()
    {
        {"IMAGE1","btn-danger"},
        {"IMAGE2","btn-secondary"},
        {"IMAGE3","btn-dark"},
        {"IMAGE4","btn-primary"}
    };
    private void ChangeHinhDics(string number)
    {
        imgKB=$"{number}"+"-KBHOME.jpg";
    }
}